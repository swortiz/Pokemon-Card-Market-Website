{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend for Pokemon Card Market",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npx etsc",
    "start": "npm run build && npm run start:node",
    
    "start:api": "cross-env STATIC=./public npm run start",
    "start:proto": "cross-env STATIC=../proto/dist npm run start",
    "start:app": "cross-env STATIC=../app/dist npm run start",
    "start:node": "node dist/index.js",
    "check": "tsc --noEmit"
  },
  "author": "Steven Ortiz",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.0",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.0",
    "esbuild-node-tsc": "^2.0.5",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3"
  }
}
